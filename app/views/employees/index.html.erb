<p id="notice"><%= notice %></p>

<h1>Employees</h1>

<table>
  <thead>
    <tr>
      <th>Sr. no</th>
      <th>Name</th>
      <th>Image</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @employees.each_with_index do |employee, i| %>
      <tr>
        <td><%= (@page_no.to_i - 1) * 10 + i + 1 %></td>
        <td><%= link_to employee.name, employee %></td>
        <td><%= link_to image_tag(employee.image_url(:thumb).to_s), employee %></td>
        
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Employee', new_employee_path %>

<%= will_paginate @employee %>

